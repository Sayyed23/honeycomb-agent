# Application Configuration
APP_NAME="Agentic Honeypot API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
HOST="0.0.0.0"
PORT=8000
WORKERS=1

# Database Configuration
DATABASE_URL="postgresql://honeypot_user:password@localhost:5432/honeypot_api"
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true

# Google Gemini AI Configuration
GEMINI_API_KEY="your_gemini_api_key_here"
GEMINI_MODEL="gemini-1.5-pro"
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=500
GEMINI_TIMEOUT=30

# Security Configuration
API_KEY_SECRET="your_secure_api_key_secret_here"
ALLOWED_HOSTS="localhost,127.0.0.1,*.railway.app,*.run.app"
CORS_ORIGINS="https://hackathon.guvi.in"
RATE_LIMIT_PER_MINUTE=60

# GUVI Integration Configuration
GUVI_CALLBACK_URL="https://hackathon.guvi.in/api/updateHoneyPotFinalResult"
GUVI_API_KEY="your_guvi_api_key_here"
GUVI_TIMEOUT=30
GUVI_MAX_RETRIES=5
GUVI_RETRY_BACKOFF_BASE=1.0
GUVI_RETRY_BACKOFF_MULTIPLIER=2.0
GUVI_RETRY_MAX_DELAY=300.0

# Scam Detection Configuration
SCAM_RISK_THRESHOLD=0.75
SCAM_CONFIDENCE_THRESHOLD=0.8
AGENT_ACTIVATION_PROBABILITY=0.85
MAX_CONVERSATION_TURNS=10
SESSION_TIMEOUT_MINUTES=30
ENTITY_CONFIDENCE_THRESHOLD=0.8

# Monitoring Configuration
LOG_LEVEL="INFO"
ENABLE_METRICS=true
METRICS_PORT=8001
HEALTH_CHECK_TIMEOUT=30