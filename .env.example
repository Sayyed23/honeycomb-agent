# =============================================================================
# Agentic Honeypot API – Environment Variables
# Copy to .env and fill in values. See ENV_SETUP.md for where to get each.
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME="Agentic Honeypot API"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=1

# -----------------------------------------------------------------------------
# Honeypot API auth (required for evaluation)
# -----------------------------------------------------------------------------
# Header: x-api-key: <this value>. Set your own secret; give same to evaluator.
x_API_KEY=your_secret_api_key_here

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# Local: sqlite. Production: postgres (e.g. from Railway / Render / Neon).
DATABASE_URL=sqlite:///./test.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# -----------------------------------------------------------------------------
# Redis (optional – app runs without it)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true

# -----------------------------------------------------------------------------
# Google Gemini (for AI replies)
# -----------------------------------------------------------------------------
# Get key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# -----------------------------------------------------------------------------
# GUVI callback (mandatory for hackathon evaluation)
# -----------------------------------------------------------------------------
# URL is fixed by hackathon; key only if evaluator requires auth.
GUVI_CALLBACK_URL=https://hackathon.guvi.in/api/updateHoneyPotFinalResult
GUVI_API_KEY=test-guvi-key
GUVI_TIMEOUT=30
GUVI_MAX_RETRIES=5
GUVI_RETRY_BACKOFF_BASE=1.0
GUVI_RETRY_BACKOFF_MULTIPLIER=2.0
GUVI_RETRY_MAX_DELAY=300.0

# -----------------------------------------------------------------------------
# Security (internal use – any random string for API key hashing)
# -----------------------------------------------------------------------------
API_KEY_SECRET=your_secure_random_string_here
